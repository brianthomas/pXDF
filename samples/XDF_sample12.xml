<?xml version="1.0" standalone="no"?>
<!DOCTYPE XDF SYSTEM "XDF_018.dtd" [
<!ENTITY newline "&#10;">
]>
<!-- An alternative tagged table with transposed axes (versus what is in sample 3). -->
<XDF name="A sample XDF document" description="This shows how to put any data into XDF format using tagged data.">
<!-- A little table about 3 nearby galaxies -->
  <parameterGroup name="Structure Properties">
    <parameter name="date">
      <unitless/>
      <value>01-12-99</value>
      <note>This parameter is not accurate.</note>
    </parameter>
    <parameter name="date2">
      <unitless/>
      <value>10-22-00</value>
    </parameter>
  </parameterGroup>
  <array name="Galaxy Data">
    <fieldAxis axisId="columns" size="8">
      <field fieldId="gname" name="galaxy name">
        <unitless/>
        <dataFormat>
          <string length="8"/>
        </dataFormat>
      </field>
      <fieldGroup name="position">
        <field name="right ascension">
          <units>
            <unit>degrees</unit>
          </units>
          <dataFormat>
            <float width="11" precision="7"/>
          </dataFormat>
        </field>
        <field name="declination">
          <units>
            <unit>degrees</unit>
          </units>
          <dataFormat>
            <float width="11" precision="7"/>
          </dataFormat>
        </field>
      </fieldGroup>
      <field fieldId="vmag" name="V-band Flux">
        <units>
          <unit>magnitude</unit>
        </units>
        <dataFormat>
          <float width="4" precision="1"/>
        </dataFormat>
      </field>
      <field name="V-band Error">
        <units>
          <unit>magnitude</unit>
        </units>
        <dataFormat>
          <float width="4" precision="1"/>
        </dataFormat>
        <relation idRefs="vmag" role="error"/>
      </field>
      <field fieldId="idNumber" name="CDD ID">
        <unitless/>
        <dataFormat>
          <integer width="1"/>
        </dataFormat>
      </field>
      <field fieldId="enumber" name="A Sci. Number">
        <unitless/>
        <dataFormat>
          <float width="8" precision="3" exponent="2"/>
        </dataFormat>
      </field>
      <field name="Reference">
        <unitless/>
        <dataFormat>
          <string length="40"/>
        </dataFormat>
        <relation idRefs="gname" role="reference"/>
      </field>
    </fieldAxis>
    <axis axisId="rows" size="3">
      <unitless/>
      <dataFormat><integer width="1"/></dataFormat>
      <valueGroup name="rows">
        <valueList delimiter=" " repeatable="yes">0 1  2</valueList>
      </valueGroup>
    </axis>
<!-- declare the ordering of how to read this in, assoc. of axis to data -->
    <dataStyle encoding="UTF-8">
      <tagged>
        <tagToAxis tag="d0" axisIdRef="columns"/>
        <tagToAxis tag="d1" axisIdRef="rows"/>
      </tagged>
    </dataStyle>
    <data>
      <d0>
<!-- column 1 -->
        <d1>M31</d1>
        <d1>M33</d1>
        <d1>M80</d1>
      </d0>
      <d0>
<!-- column 2 -->
        <d1>230.12098776</d1>
        <d1>130.094</d1>
        <d1>230.04429292</d1>
      </d0>
      <d0>
<!-- column 3 -->
        <d1>-34.3424911</d1>
        <d1>+36.0000001</d1>
        <d1>+74.2449499</d1>
      </d0>
      <d0>
<!-- column 4 -->
        <d1>12.6</d1>
        <d1>14.6</d1>
        <d1>12.8</d1>
      </d0>
      <d0>
<!-- column 5 -->
        <d1>0.5</d1>
        <d1>1.5</d1>
        <d1>-0.5</d1>
      </d0>
      <d0>
<!-- column 6 -->
        <d1>0</d1>
        <d1>3</d1>
        <d1>8</d1>
      </d0>
      <d0>
<!-- column 7 -->
        <d1>1.000E-3</d1>
        <d1/>
        <d1>3.3E33</d1>
      </d0>
      <d0>
<!-- column 8 -->
        <d1>ApJ Ref 1.</d1>
        <d1/>
        <d1/>
      </d0>
    </data>
    <notes>
      <locationOrder>
        <index axisIdRef="rows"/>
        <index axisIdRef="columns"/>
      </locationOrder>
      <note location="1 1">This is table 3 from the Zezajck article. Newline:[&newline;].</note>
      <note location="0 2">This is table 3 from the Zezajck article.</note>
      <note noteId="note1" location="0 1">No data because of a cosmic ray hit</note>
      <note noteIdRef="note1" location="0 2"/>
    </notes>
  </array>
</XDF>
