<?xml version="1.0" standalone="no"?>
<!DOCTYPE XDF SYSTEM "XDF_018.dtd">
<!-- this is a 3 dimensional array of numbers -->
<XDF name="A sample XDF document">
  <array name="Raw Data">
    <parameter name="integration time">
      <units>
        <unit>sec</unit>
      </units>
      <value>900</value>
    </parameter>
<!-- units of the data in this array -->
    <units>
      <unit>counts</unit>
      <unit power="-1">seconds</unit>
    </units>
    <dataFormat>
      <float width="5" precision="2"/>
    </dataFormat>
    <axis name="x" axisId="x-axis" axisDatatype="integer" size="3">
      <units>
        <unit>pixel</unit>
      </units>
      <valueList size="3" step="1" start="0"/>
    </axis>
    <axis name="y" axisId="y-axis" axisDatatype="integer" size="3">
      <units>
        <unit>pixel</unit>
      </units>
      <valueList delimiter=" " repeatable="yes">3 2 1</valueList>
    </axis>
    <axis name="frame number" axisId="z-axis" axisDatatype="string" size="3">
      <unitless/>
      <valueList delimiter=" " repeatable="yes">A B C</valueList>
    </axis>
    <dataStyle>
      <fixedWidth>
        <fixedWidthInstruction>
          <repeat count="2">
            <readCell/>
            <skip>
              <chars/>
            </skip>
<!-- just outputs a space -->
          </repeat>
          <readCell/>
          <skip>
            <newLine/>
          </skip>
<!-- will output logical newLine -->
        </fixedWidthInstruction>
        <for axisIdRef="y-axis">
          <for axisIdRef="x-axis">
            <for axisIdRef="z-axis">
              <doInstruction/>
            </for>
          </for>
        </for>
      </fixedWidth>
    </dataStyle>
<!-- note the recursive data node use, its not needed, but helps me to see
           which frames go where. -b.t. -->
    <data>
<!-- 3x3 image frame A -->
      <data>
<![CDATA[76.53 78.75 67.78
32.59  5.97 68.77
25.39 51.86 30.69
]]>
      </data>
<!-- 3x3 image frame B -->
      <data>
<![CDATA[89.37 10.68 82.31
17.85 25.87 64.17
92.64 47.88  8.03
]]>
      </data>
<!-- 3x3 image frame C -->
      <data>
<![CDATA[+7.48 -0.09 -3.15
 8.63 20.26 17.27
24.19 72.09 19.69
]]>
      </data>
    </data>
    <notes>
      <note>Improper cooling of the camera may have resulted in significant dark current for frame C.</note>
    </notes>
  </array>
</XDF>
