<?xml version ="1.0"?>
<!DOCTYPE XDF SYSTEM "XDF_018.dtd" [
  <!NOTATION xdf PUBLIC "application/xdf">
  <!ENTITY newLine "&#10;">
  <!ENTITY table1 SYSTEM "binarytable0" NDATA xdf>
]>
<XDF name="A sample XDF document" description="This shows how to put any data into XDF using formatted data IO Style.">
  <parameterGroup>
    <parameter name="date" datatype="string">
      <units>
        <unitless/>
      </units>
      <value>01-12-99</value>
      <note>This parameter is not accurate.</note>
    </parameter>
    <parameter name="date2">
      <units>
        <unitless/>
      </units>
      <value>10-22-00</value>
    </parameter>
  </parameterGroup>
  <array name="Galaxy Data">
    <fieldAxis axisId="fields">
      <field name="galaxy name" fieldId="gname">
        <units>
          <unitless/>
        </units>
        <dataFormat><string length="8"/></dataFormat>
      </field>
      <fieldGroup name="position">
        <field name="right ascension">
          <units>
            <unit>degrees</unit>
          </units>
          <dataFormat><binaryFloat bits="32"/></dataFormat>
        </field>
        <field name="declination">
          <units>
            <unit>degrees</unit>
          </units>
          <dataFormat><binaryFloat bits="32"/></dataFormat>
        </field>
      </fieldGroup>
      <field name="V-band Flux" fieldId="vmag">
        <units>
          <unit>magnitude</unit>
        </units>
        <dataFormat><binaryFloat bits="32"/></dataFormat>
      </field>
      <field name="V-band Error">
        <units>
          <unit>magnitude</unit>
        </units>
        <dataFormat><binaryFloat bits="32"/></dataFormat>
        <relation fieldIdRefs="vmag" role="error"/>
      </field>
      <field name="CCD ID Number" fieldId="ccdNumber">
        <units>
          <unitless/>
        </units>
        <dataFormat><binaryInteger signed="yes" bits="16"/></dataFormat>
      </field>
      <field name="A Sci. Number" fieldId="enumber">
        <units>
          <unitless/>
        </units>
        <dataFormat><float width="8" precision="3" exponent="2"/></dataFormat>
      </field>
      <field name="Reference">
        <units>
          <unitless/>
        </units>
        <dataFormat><string length="10"/></dataFormat>
        <relation fieldIdRefs="gname" role="reference"/>
      </field>
    </fieldAxis>
    <axis axisDatatype="integer" axisId="rows">
      <axisUnits>
        <unitless/>
      </axisUnits>
      <valueGroup>
        <value>0</value>
        <value>1</value>
        <value>2</value>
      </valueGroup>
    </axis>
    <read encoding="UTF-8" endian="LittleEndian">
      <fixedWidthStyle>
        <fixedWidthReadInstructions> 
          <repeat count="7">
            <readCell/>
            <skip/>
          </repeat>
          <readCell/>
          <skip><newLine/></skip>
        </fixedWidthReadInstructions> 
        <for axisIdRef="rows">
          <for axisIdRef="fields">
             <doReadInstructions/>
          </for>
        </for>
      </fixedWidthStyle>
    </read>
    <data href="table1"></data> 
    <notes>
      <locationOrder>
        <index axisIdRef="fields"/>
        <index axisIdRef="rows"/>
      </locationOrder>
      <note location="1 1">This is table 3 from the Zezajck article. Newline:[&newLine;].</note>
      <note location="0 2">This is table 3 from the Zezajck article.</note>
      <note noteId="note1" location="0 1">No data because of a cosmic ray hit</note>
      <note noteId="note10" location="0 2">No data because of a cosmic ray hit</note>
    </notes>
  </array>
</XDF>
